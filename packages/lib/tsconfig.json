{
	"compilerOptions": {
		"target": "ES2019",
		"module": "ESNext",
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"isolatedModules": true
	},
	"include": [
		"src"
	]
}