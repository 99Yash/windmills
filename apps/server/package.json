{
  "name": "server",
  "main": "src/index.ts",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc -b",
    "compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
    "dev": "tsx watch src/dev.ts",
    "start": "node dist/index.js",
    "dev:cf": "wrangler dev",
    "deploy:cf": "wrangler deploy",
    "deploy:cf:staging": "wrangler deploy --env staging",
    "cf-typegen": "wrangler types",
    "dev:vercel": "vercel dev",
    "deploy:vercel": "vercel --prod",
    "deploy:vercel:preview": "vercel",
    "db:start": "docker compose up -d",
    "db:watch": "docker compose up",
    "db:stop": "docker compose stop",
    "db:down": "docker compose down"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@hono/trpc-server": "^0.4.0",
    "@trpc/client": "^11.5.0",
    "@trpc/server": "^11.5.0",
    "@windmills/db": "workspace:*",
    "@windmills/lib": "workspace:*",
    "better-auth": "^1.3.10",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "postgres": "^3.4.5",
    "zod": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.11",
    "tsdown": "^0.15.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.2",
    "wrangler": "^4.38.0"
  },
  "packageManager": "pnpm@9.6.0"
}
